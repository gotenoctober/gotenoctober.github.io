---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
// import HorizontalCard from "../components/HorizontalCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TimeLine from "../components/TimeLine.astro";

const projects = (await getCollection("projects")).sort(
  (a, b) => a.data.order - b.data.order
);
const featuredProjects = projects.slice(0, 3);
const skills = [
  "React Native",
  "React / Redux",
  "Typescript / Node.js",
  "VueJS / Vuex",
  "d3",
  "Ruby on Rails",
  "Elixir",
  "GraphQL",
  "Slack API",
  "Stripe API",
  "AWS",
  "Google Cloud / Firebase",
  "PostgreSQL",
  "Redis",
  "Docker / dokku",
];
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <h1 class="w-full">ðŸ‘‹ Hi I'm Jeff</h1>
    <div class="py-2">
      <p class="text-lg mb-3">
        I'm a highly-experienced team manager and software developer
        specializing in web and mobile applications. With over 10 years of
        experience, I have enjoyed building intuitive well-tested products for
        consumers and businesses in a variety of industries.
      </p>
      <p class="text-lg">
        As a <em>true</em> full-stack developer I am comfortable with working within
        all aspects of a sophisticated application including web and mobile frontend,
        backend, and server operations.
      </p>
    </div>
    <div class="mt-8 flex justify-between">
      <a class="btn btn-primary" href="/resume.pdf" target="_blank">
        Let's connect!
      </a>
      <a href="/resume.pdf" class="btn btn-outline btn-primary ml-5" download>
        Download Resume / CV
      </a>
    </div>
  </div>

  <h2 class="w-full">Skills</h2>

  <div class="mb-4">
    {
      skills.map((skill) => (
        <span class="badge badge-secondary badge-lg mr-1 mb-2">{skill}</span>
      ))
    }
  </div>

  <h2 class="w-full">Featured projects</h2>

  <div class="mb-2">
    {
      featuredProjects.map((project) => (
        <>
          <ProjectCard project={project.data} />
          <div class="divider my-0" />
        </>
      ))
    }
  </div>

  <h2 class="w-full">Experience</h2>

  <div class="time-line-container mb-4">
    <TimeLine title="Owner, Ten October LLC" subtitle="2011 â€” Present">
      I founded Ten October to provide software development services for web and
      mobile applications. Notable projects are outlined above.
    </TimeLine>
    <TimeLine title="Mad Mimi" subtitle="2012 â€” 2014">
      Full-stack development primarily utilizing Ruby on Rails and PrototypeJS.
      I was initially responsible for creating Mad Mimi's Etsy product
      integration and later led projects to improve analytics and implement
      purchase/ checkout features. I voluntarily left Mad Mimi after it was
      purchased by GoDaddy.
    </TimeLine>
    <TimeLine title="Dead-end Corporate Job" subtitle="2008 â€” 2012">
      TPS reports, mostly.
    </TimeLine>
  </div>

  <h2 class="text-3xl w-full font-bold mb-4">Education</h2>

  <div class="time-line-container">
    <TimeLine
      title="Brigham Young University"
      subtitle="2008: B.S. Information Systems Management"
    >
      Go Cougars
    </TimeLine>
  </div>
</BaseLayout>
